{
    "name": "meplato/store2",
    "type": "library",
    "description": "A REST interface for the Meplato Store 2.0 API.",
    "keywords": ["meplato"],
    "homepage": "https://developer.meplato.com/",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Meplato Developers",
            "email": "support@meplato.com",
            "homepage": "https://github.com/meplato/store2-php-client"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "require": {
        "php": "~8.3",
        "guzzlehttp/guzzle": "~7.5",
        "guzzlehttp/uri-template": "^1.0"
    },
    "require-dev": {
        "psr/log": "~1.0 || ~3.0",
        "phpunit/phpunit": "~11.0 || ~12.0"
    },
    "autoload": {
        "psr-4": {
            "Meplato\\Store2\\": "src/",
            "Meplato\\Store2\\Catalogs\\": "src/catalogs/",
            "Meplato\\Store2\\Products\\": "src/products/",
            "Meplato\\Store2\\Jobs\\": "src/jobs/",
            "Meplato\\Store2\\Availabilities\\": "src/availabilities/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Meplato\\Store2\\Tests\\": "tests/",
            "Meplato\\Store2\\Tests\\Catalogs\\": "tests/catalogs/",
            "Meplato\\Store2\\Tests\\Products\\": "tests/products/",
            "Meplato\\Store2\\Tests\\Jobs\\": "tests/jobs/",
            "Meplato\\Store2\\Tests\\Availabilities\\": "tests/availabilities/"
        }
    }
}
